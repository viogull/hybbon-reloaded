<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login_frag_rr"
    xmlns:custom="http://schemas.android.com/apk/res-auto">


    <EditText
        android:id="@+id/username1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:text="Username"
        android:textColor="@color/about_item_text_color"
        android:layout_above="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="110dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="@color/about_text_color"
        android:layout_above="@+id/pin"
        android:layout_alignStart="@+id/username1" />

    <EditText
        android:id="@+id/pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:hint="PIN"
        android:inputType="numberPassword"
        android:textColorHint="@color/about_text_color"
        android:layout_above="@+id/textView4"
        android:layout_marginBottom="17dp"
        android:layout_alignStart="@+id/password" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/saveCredentialsSwitch"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <com.dd.processbutton.iml.ActionProcessButton
        android:id="@+id/sign_in_up_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/connect"
        android:textColor="@color/white_two"
        android:textSize="16sp"
        custom:pb_colorComplete="@color/green_complete"
        custom:pb_colorNormal="@color/blue_normal"
        custom:pb_colorPressed="@color/blue_pressed"
        custom:pb_colorProgress="@color/purple_progress"
        custom:pb_textComplete="Success"
        custom:pb_textProgress="Checking..."
        android:layout_marginEnd="200dp"

        android:layout_below="@+id/saveCredentialsSwitch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Save credentials?"
        android:textSize="16sp" />
</RelativeLayout>